<div id="post_container">
    <%= link_to 'Edit', edit_post_path(@post) %> |
	  <%= link_to 'Delete', post_path(@post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

  <h1 class="title"><%= @post.title %></h1>
  <p class="date">
    Posted on <%= @post.posted_on %>

  </p>
  <p class="body"><%= @post.body %></p>


</div>
